<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nameComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_weight="3"
            android:layout_marginTop="4dp"
            android:text="Hisham Snaimeh"
            android:textColor="@color/grey_dark"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="20-09-2017"
            android:textSize="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/commentDec"
            android:layout_marginEnd="12dp" />


        <TextView
            android:id="@+id/commentDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameComment"
            android:layout_below="@+id/nameComment"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="no comment"
            android:textSize="15dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/commentDec"
            android:layout_marginTop="5dp"
            android:background="#e2e2e2" />
    </RelativeLayout>


</android.support.v7.widget.CardView>