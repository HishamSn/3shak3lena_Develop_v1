<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/relativeiew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgallcoupon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shadow_44441"
            android:padding="10dp" />


        <TextView
            android:id="@+id/titleallcoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/grey_dark"
            android:textSize="18dp"
            android:layout_below="@+id/imageView2"
            android:layout_toEndOf="@+id/imgallcoupon" />

        <TextView
            android:id="@+id/date_created"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgallcoupon"
            android:layout_below="@+id/status_coupon"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textSize="14dp"
            android:maxLines="3"
            android:text="test test test test test test test test test "
            android:textColor="@color/grey_dark"
            />

        <TextView
            android:id="@+id/status_coupon"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="16dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgallcoupon"
            android:layout_below="@+id/titleallcoupon"
            android:maxLines="3"
            android:text="test test test test test test test test test "
            android:textColor="@color/grey_dark" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/f5min"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/imgallcoupon"
            android:background="#bcbaba" />

    </RelativeLayout>




</android.support.v7.widget.CardView>