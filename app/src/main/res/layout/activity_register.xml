<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a3lena.a3shak.com.a3shak3lena.Auth.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <include layout="@layout/app_bar_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/etFname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="textPersonName"
                android:layout_marginRight="5dp"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:textColorHint="@color/grey_dark"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="الاسم الاول"
                android:background="@drawable/edittext_rounded_corners_login"/>

            <EditText
                android:id="@+id/etLname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:gravity="center"
                android:inputType="textPersonName"
                android:layout_weight="0.5"
                android:textColorHint="@color/grey_dark"
                android:drawableStart="@drawable/ic_family_black_24dp"
                android:hint="اسم العائلة"
                android:background="@drawable/edittext_rounded_corners_login"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:textColorHint="@color/grey_dark"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:hint="رقم الهاتف"
            android:background="@drawable/edittext_rounded_corners_login"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_rounded_corners_login"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:gravity="center"
            android:hint="كلمة المرور"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey_dark" />


        <Spinner
            android:id="@+id/spcountry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_rounded_corners_login"
            />



        <Button
            android:id="@+id/btnRegsiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_orange"
            android:text="انشاء حساب جديد"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>
