<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a3lena.a3shak.com.a3shak3lena.Auth.MyProfile"
    android:background="#FFF">

    <include layout="@layout/app_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit_icon"
            android:id="@+id/imageView4" />

        <TextView
            android:id="@+id/txtEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/orange"
            android:text="تعديل المعلومات"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginStart="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_weight="1">


            <EditText
                android:id="@+id/p_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey_dark"
                android:background="@drawable/edittext_rounded_corners_comment"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:gravity="center"
                android:hint="الاسم الاول"
                android:maxLines="1"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp"
                android:scrollHorizontally="true"
                android:textColor="#5f5d5e"

                />

            <EditText
                android:id="@+id/p_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext_rounded_corners_comment"
                android:drawableStart="@drawable/ic_family_black_24dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:gravity="center"
                android:hint="اسم العائلة"
                android:maxLines="1"
                android:textColorHint="@color/grey_dark"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:scrollHorizontally="true"
                android:textColor="#5f5d5e"

                />

            <EditText
                android:id="@+id/p_mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners_comment"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="رقم الهاتف"
                android:textColorHint="@color/grey_dark"
                android:maxLines="1"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:scrollHorizontally="true"
                android:textColor="#5f5d5e"
                android:layout_marginBottom="10dp"

                />


            <EditText
                android:id="@+id/p_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners_comment"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="*********"
                android:inputType="textPassword"
                android:textColorHint="@color/grey_dark"
                android:maxLines="1"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:scrollHorizontally="true"
                android:layout_marginBottom="10dp"
                android:textColor="#5f5d5e" />

            <Button
                android:id="@+id/p_btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_button"
                android:textColor="#fff"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:paddingTop="10dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:text="تعديل البيانات"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
